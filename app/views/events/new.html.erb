<% now = Time.zone.now %>

<%= form_with(model: @event, class: "") do |f| %>
  <div id="errors"></div>
  <%= f.label :name %>
  <%= f.text_field :name, class: "" %><br/>
  <%= f.label :place %>
  <%= f.text_field :place, class: "" %><br/>
  <%= f.label :start_at %>
  <%= f.datetime_select :start_at, start_year: now.year, end_year: now.year + 1 %><br/>
  <%= f.label :end_at %>
  <%= f.datetime_select :end_at, start_year: now.year, end_year: now.year + 1 %><br/>
  <%= f.label :content %>
  <%= f.text_area :content, class: "" %><br/>
  <%= f.submit class: "" %>
<% end %>
